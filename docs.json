{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "FormSign Docs",
  "colors": {
    "primary": "#0ea5e9",
    "light": "#38bdf8",
    "dark": "#0284c7"
  },
  "favicon": "/favicon.svg",
  "api": {
    "baseUrl": "https://api.formsign.com.br",
    "auth": {
      "method": "bearer",
      "name": "Authorization",
      "inputPrefix": "Bearer "
    },
    "playground": { "mode": "show" }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          { "group": "Introdução", "pages": ["introducao/referencia"] },
          { "group": "Autenticação", "pages": ["autenticacao/referencia", "autenticacao/token"] },
          { "group": "Envelopes Base64", "pages": [
            "envelopes/referencia",
            "envelopes/enviar"
          ] },
          { "group": "Templates Base64", "pages": [
            "templates/referencia",
            "templates/criar"
          ] },
          { "group": "Exemplos", "pages": ["examples"] }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.png",
    "href": "https://formsign.com.br"
  },
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "FormSign",
      "href": "https://formsign.com.br"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
